      <a class="navbar-brand" href="/">Pet Finder</a>

      <button class="navbar-toggler" data-toggle="collapse" data-target="#navbarNavDropdown">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarNavDropdown">

        <ul class="navbar-nav text-center ml-auto">
          <li class="nav-items mr-1">
            <a class="nav-link {{#isActive title 'Dogs'}} active {{/isActive}}" href="">Dogs</a>
