<div class="container mt-5">
    <h1 class="display-3">Search Dog by Breed</h1>
    <form action="/dogs" method="GET">
        <div class="form-group">
            <select name="breed" id="breed_select" class="custom-select breed">
                <option></option>
            </select>
        </div>
        <button class="btn btn-outline-dark hvr-grow" id="search">Search</button>
    </form>
</div>
<div class="container result">
    <div class="row mt-5">
        <div class="col-md-7">
            <div class="jumbotron">
                <p class="lead">Select a dog breed to get info.</p>
            </div>
        </div>
        <div class="col-md-5">
            <div id="dogImg"></div>
        </div>
    </div>
</div>


{{!-- MongoDB Search Results --}}
<div class="row mt-4 ml-3 mr-3 mb-5">
    {{#each pets}}
    <div class="col-md-4 mb-5">
        <div class="card">
            <img src="{{this.petImg}}" id="cardImg" class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title">{{this.name}}</h5>
                <p class="card-text">Age: {{this.age}}</p>
                <p class="card-text">Breed: {{this.breed}}</p>
                <p class="card-text">Description: {{this.desc}}</p>
                <p class="card-text">Animal: {{this.categ}}</p>
            </div>
            <div class="card-footer">
                <button type="submit" class="btn hvr-glow likeBtn"><i class="fa fa-heart"></i></button>
                <small class="text-muted ml-5">Last updated 3 mins ago </small>
                <button type="button" class="btn btn-sm ml-5 detailsBtn">Details</button>
            </div>
        </div>
    </div>
    {{/each}}
</div>

{{!-- MongoDB Search Results End --}}